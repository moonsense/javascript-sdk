{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "allowJs": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}